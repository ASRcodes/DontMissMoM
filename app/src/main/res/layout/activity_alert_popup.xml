<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alertPopupRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B71C1C"
    android:keepScreenOn="true"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iconSiren"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_dialog_alert"
        app:tint="#FFEBEE"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvEmergencyHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY ALERT"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="28sp"
        android:letterSpacing="0.05"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iconSiren"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:text="Override Silent Mode Active"
        android:textColor="#FFCDD2"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/btnCallBack"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyHeader"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:text="IN DISTRESS:"
                android:textSize="12sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown User"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvSenderPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 XXXXX XXXXX"
                android:textColor="#555555"
                android:textSize="18sp"
                android:layout_marginBottom="24dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="#D32F2F"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:text="Last Known Location"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvLocationCoordinates"
                        android:text="Fetching..."
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnMap"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="MAP"
                    android:textSize="12sp"
                    android:textColor="#D32F2F"
                    style="?android:attr/borderlessButtonStyle"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnCallBack"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="ðŸ“ž  CALL NOW"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:textColor="@android:color/white"
        android:elevation="6dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnDismiss"/>

    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="STOP SIREN"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#D50000"
        android:textColor="#FFEBEE"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>